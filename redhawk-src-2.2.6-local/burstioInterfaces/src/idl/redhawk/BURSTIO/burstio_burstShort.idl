#ifndef _BURSTSHORT_IDL_
#define _BURSTSHORT_IDL_

#include "redhawk/BURSTIO/burstioDataTypes.idl"

module BURSTIO {

    struct ShortBurst {
        BurstSRI SRI;                   // burst description
        PortTypes::ShortSequence data;  // payload
        BULKIO::PrecisionUTCTime T;     // timestamp
        boolean EOS;                    // end of stream
    };
    
    typedef sequence<ShortBurst> ShortBurstSequence;

    interface burstShort : BULKIO::ProvidesPortStatisticsProvider {
        void pushBursts(in ShortBurstSequence bursts);
    };
};

#endif
